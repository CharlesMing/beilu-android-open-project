<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <ImageView
            android:id="@+id/iv_item_find_avatar"
            android:layout_width="@dimen/image_size_38"
            android:layout_height="@dimen/image_size_38"
            tools:src="@drawable/ic_default_avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_item_find_avatar"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_item_find_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14"
                tools:text="小明" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_find_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/attention_selector"
            android:gravity="center"
            android:text="+ 关注"
            android:textColor="@color/attention_txt_color"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_find_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="6"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        tools:text="健身教练和女学员聊天内容大曝光天内容大曝光天内容大曝光天内容大曝光天内容大曝光天内容大曝光天内容大曝光，太一言难了"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_16" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item_find_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:focusableInTouchMode="false"
        android:nestedScrollingEnabled="false"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:visibility="gone"
        tools:listitem="@layout/item_find_pic_img" />

    <com.mx.pro.lib.album.internal.ui.widget.RoundedRectangleImageView
        android:id="@+id/iv_item_find_pic"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_item_find_praise"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="@drawable/btn_borderless_mtrl"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_find_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/find_praise_selector"
                android:drawablePadding="10dp"
                android:gravity="center"
                tools:text="2354" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_find_comment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="@drawable/btn_borderless_mtrl"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_find_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_find_comment"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                tools:text="2354" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_find_share"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="@drawable/btn_borderless_mtrl"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_find_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_find_share"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                tools:text="2354" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>